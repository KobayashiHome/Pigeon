<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/number_iv_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_default" />

    <TextView
        android:id="@+id/number_tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试用户名"
        android:layout_toRightOf="@id/number_iv_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:id="@+id/number_iv_type"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_family_userinfo"/>

    <ImageView
        android:id="@+id/number_iv_userInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/number_iv_type"
        android:src="@drawable/ic_family_userinfo"/>

</RelativeLayout>