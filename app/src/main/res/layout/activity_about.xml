<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/check_upgrade_bg"
    android:orientation="vertical">

    <include layout="@layout/view_common_toolbar" />


    <TextView
        android:id="@+id/about_tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/ic_launcher"
        android:gravity="center_horizontal"
        android:text="@string/about_tv_version" />


    <TextView
        android:id="@+id/about_tv_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:drawableEnd="@drawable/mm_submenu_normal"
        android:padding="12dp"
        android:text="@string/about_tv_recommend"
        android:textColor="@color/about_tv_check"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/about_tv_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:drawableEnd="@drawable/mm_submenu_normal"
        android:padding="12dp"
        android:text="@string/about_tv_website"
        android:textColor="@color/about_tv_check"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/about_tv_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:drawableEnd="@drawable/mm_submenu_normal"
        android:padding="12dp"
        android:text="@string/about_tv_upgrade"
        android:textColor="@color/about_tv_check"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/about_tv_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableEnd="@drawable/mm_submenu_normal"
        android:padding="12dp"
        android:text="@string/about_tv_check"
        android:textColor="@color/about_tv_check"
        android:textSize="15sp" />

</LinearLayout>
