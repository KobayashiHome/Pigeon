<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aWhite"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_civ_userPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:src="@drawable/test_photo_03" />

        <TextView
            android:id="@+id/person_tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/person_civ_userPhoto"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/person_civ_userPhoto"
            android:text="monsterlin"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/person_tv_userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_tv_userName"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/person_civ_userPhoto"
            android:text="飞鸽号：1234567" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_search"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="反馈建议"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_search"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="设置"
        android:textColor="@color/black"
        android:textSize="15sp" />
</LinearLayout>